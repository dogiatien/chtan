@{
    ViewBag.Title = "SignUp";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <style>
        <style >
        .info {
            margin-top: 20px;
            margin-bottom: 20px;
            max-width: 800px;
            margin: 0 auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.5);
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            text-align: center;
            display: block;
            font-weight: bold;
            margin-bottom: 5px;
        }

        input[type="text"] {
            height: 25px;
            display: flex;
            margin: 0 auto;
            text-align: center;
            width: 83%;
            border: 1px solid #ccc;
            border-radius: 90px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.5);
        }

        input[type="password"] {
            height: 25px;
            display: flex;
            margin: 0 auto;
            text-align: center;
            width: 83%;
            border: 1px solid #ccc;
            border-radius: 90px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.5);
        }

        main {
            margin-top: 100px;
        }

        .submit-button {
            display: flex;
            padding-left: 35px;
            font-size: 20px;
            background-color: #e04d4d;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            margin: auto;
            width: 200px;
            height: 50px;
            font-weight: 700;
            font-family: system-ui;
        }

        body {
            font-family: Arial, sans-serif;
            background-color: #f2f2f2;
            margin: 0;
        }

        input[type="submit"]:hover {
            background-color: #45a049;
        }

        .info {
            margin-top: 20px;
            margin-bottom: 20px;
            max-width: 800px;
            margin: 0 auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.5);
        }
    </style>
</head>
<body >
    <div class="su-container">
        <h2>SignUp</h2>
        <form action="~/Home/DangKy" method="post">
            <label for="tendn">Tên Đăng Nhập:</label>
            <input type="text" name="tendn" id="tendn" required><br>
            <label for="matkhau">Mật Khẩu:</label>
            <input type="password" name="matkhau" id="matkhau" required><br>
            <label for="tentk">Tên tài khoản:</label>
            <input type="text" name="tentk" id="tentk" required><br>
            <label for="sdt">Số điện thoại:</label>
            <input type="text" name="sdt" id="sdt" required><br>
            <input type="hidden" name="loaitk" value="3">
            <input type="submit" value="Thêm tài khoản">
        </form>
    </div>
</body>
</html>